<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookingcinema.controller.QuanLyNhanVienController">
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #2196F3; -fx-padding: 15;">
            <Label text="QUẢN LÝ NHÂN VIÊN" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox spacing="10.0" style="-fx-padding: 15;">
            <!-- Form nhập liệu -->
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints minWidth="120.0" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                    <ColumnConstraints minWidth="120.0" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                </columnConstraints>

                <Label text="ID Nhân viên:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtId" promptText="Nhập ID (VD: NV001)" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Tài khoản:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <TextField fx:id="txtTaiKhoan" promptText="Nhập tài khoản" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                <Label text="Mật khẩu:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtMatKhau" promptText="Nhập mật khẩu (bỏ trống khi sửa để giữ cũ)" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Họ tên:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <TextField fx:id="txtHoTen" promptText="Nhập họ tên" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                <Label text="Ngày sinh:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <DatePicker fx:id="dpNgaySinh" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Số điện thoại:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <TextField fx:id="txtSDT" promptText="Nhập số điện thoại" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="txtEmail" promptText="Nhập email" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Vai trò:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <ComboBox fx:id="cbVaiTro" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="3" />

                <Label text="Trạng thái:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <ComboBox fx:id="cbTrangThai" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Ngày bắt đầu:" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                <DatePicker fx:id="dpNgayBatDau" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="4" />
            </GridPane>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 10 0 10 0;">
                <Button onAction="#handleAdd" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Thêm" prefWidth="100.0" />
                <Button onAction="#handleUpdate" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Sửa" prefWidth="100.0" />
                <Button onAction="#handleDelete" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Xóa" prefWidth="100.0" />
                <Button onAction="#handleClear" style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Làm mới" prefWidth="100.0" />
            </HBox>

            <!-- Table -->
            <TableView fx:id="tableEmployee" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="80.0" />
                    <TableColumn fx:id="colHoTen" text="Họ tên" prefWidth="150.0" />
                    <TableColumn fx:id="colTaiKhoan" text="Tài khoản" prefWidth="120.0" />
                    <TableColumn fx:id="colSDT" text="Số ĐT" prefWidth="120.0" />
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="180.0" />
                    <TableColumn fx:id="colVaiTro" text="Vai trò" prefWidth="100.0" />
                    <TableColumn fx:id="colTrangThai" text="Trạng thái" prefWidth="100.0" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>


