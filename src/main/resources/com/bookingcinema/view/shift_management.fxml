<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookingcinema.controller.ShiftManagementController">
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #FF9800; -fx-padding: 15;">
            <Label text="QUẢN LÝ CA LÀM VIỆC" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox spacing="15.0" style="-fx-padding: 20;">
            <!-- Form nhập liệu -->
            <GridPane hgap="15.0" vgap="15.0">
                <columnConstraints>
                    <ColumnConstraints minWidth="150.0" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" />
                </columnConstraints>

                <Label text="Loại ca làm việc:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cbNoiDung" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Giờ bắt đầu:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="txtGioBatDau" promptText="HH:mm (VD: 08:00)" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Giờ kết thúc:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="txtGioKetThuc" promptText="HH:mm (VD: 12:00)" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </GridPane>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 10 0 10 0;">
                <Button onAction="#handleAdd" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 14;" text="Thêm" prefWidth="110.0" prefHeight="35.0" />
                <Button onAction="#handleUpdate" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 14;" text="Sửa" prefWidth="110.0" prefHeight="35.0" />
                <Button onAction="#handleDelete" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 14;" text="Xóa" prefWidth="110.0" prefHeight="35.0" />
                <Button onAction="#handleClear" style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 14;" text="Làm mới" prefWidth="110.0" prefHeight="35.0" />
            </HBox>

            <!-- Table -->
            <TableView fx:id="tableShift" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="100.0" />
                    <TableColumn fx:id="colNoiDung" text="Loại ca" prefWidth="200.0" />
                    <TableColumn fx:id="colGioBatDau" text="Giờ bắt đầu" prefWidth="200.0" />
                    <TableColumn fx:id="colGioKetThuc" text="Giờ kết thúc" prefWidth="200.0" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
