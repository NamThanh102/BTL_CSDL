<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookingcinema.controller.DatVeSuatChieuController">

    <top>
        <VBox spacing="10.0" style="-fx-background-color: #333;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Button onAction="#goBack" text="&lt; Quay lại" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5; -fx-cursor: hand;"/>

                <Label fx:id="lblTenPhim" text="Tên Phim" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label fx:id="lblThongTinPhim" text="Thể loại: ... | Thời lượng: ... | Ngôn ngữ: ..." textFill="#cccccc" wrapText="true"/>
            </children>
        </VBox>
    </top>

    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>
            <Label text="Chọn Suất Chiếu" textFill="#333333">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>

            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                <content>
                    <FlowPane fx:id="flowPaneSuatChieu" hgap="20.0" vgap="20.0">
                    </FlowPane>
                </content>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>

