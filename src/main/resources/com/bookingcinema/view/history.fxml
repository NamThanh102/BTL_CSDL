<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookingcinema.controller.HistoryController">
    <top>
        <VBox spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Button onAction="#goBack" style="-fx-background-color: #e0e0e0; -fx-cursor: hand;" text="&lt; Quay về Trang chủ" />
            </HBox>
            <Label text="LỊCH SỬ GIAO DỊCH" textFill="#333333">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            <Label fx:id="lblWelcome" text="Tài khoản: ..." textFill="#555555" />
        </VBox>
    </top>
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <TableView fx:id="tblHoaDon" prefHeight="400.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="colID" prefWidth="75.0" text="Mã HĐ" />
                    <TableColumn fx:id="colNgayTao" prefWidth="150.0" text="Ngày thanh toán" />
                    <TableColumn fx:id="colPTTT" prefWidth="150.0" text="P.Thức TToán" />
                    <TableColumn fx:id="colTongTien" prefWidth="120.0" text="Tổng tiền" />
                    <TableColumn fx:id="colTrangThai" prefWidth="100.0" text="Trạng thái" />
                    <TableColumn fx:id="colChiTiet" prefWidth="100.0" text="Chi tiết" /> </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <Label text="Chi tiết Vé:" textFill="#d32f2f">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
            <TableView fx:id="tblVe" prefHeight="200.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="colTenPhim" prefWidth="200.0" text="Tên Phim" />
                    <TableColumn fx:id="colGioChieu" prefWidth="150.0" text="Thời điểm chiếu" /> <TableColumn fx:id="colPhong" prefWidth="100.0" text="Phòng" />
                    <TableColumn fx:id="colGhe" prefWidth="100.0" text="Ghế" />
                    <TableColumn fx:id="colGiaVe" prefWidth="100.0" text="Giá/Vé" />
                    <TableColumn fx:id="colTrangThaiVe" prefWidth="100.0" text="Trạng thái Vé" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>