<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookingcinema.controller.TraCuuKhachHangController">

    <center>
        <VBox spacing="20.0" alignment="TOP_CENTER">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>

            <Label text="Tìm Kiếm Khách Hàng" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <HBox spacing="15.0" alignment="CENTER_LEFT">
                <Label text="Tìm theo:" />
                <ComboBox fx:id="cboSearchType" prefWidth="150.0" />
                <TextField fx:id="txtSearchInput" promptText="Nhập thông tin tìm kiếm..." prefWidth="300.0" />
                <Button onAction="#handleSearch" text="Tìm kiếm" style="-fx-padding: 8px 20px; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-cursor: hand;" />
            </HBox>

            <Label fx:id="lblMessage" textFill="RED" wrapText="true" />

            <VBox fx:id="vboxKhachHangInfo" spacing="10.0">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
                <Label fx:id="lblTaiKhoan" style="-fx-font-size: 14px;" />
                <Label fx:id="lblHoTen" style="-fx-font-size: 14px;" />
                <Label fx:id="lblEmail" style="-fx-font-size: 14px;" />
                <Label fx:id="lblSDT" style="-fx-font-size: 14px;" />
                <Label fx:id="lblNgaySinh" style="-fx-font-size: 14px;" />
                <Label fx:id="lblVaiTro" style="-fx-font-size: 14px; -fx-text-fill: #d32f2f;" />
            </VBox>
        </VBox>
    </center>

</BorderPane>
