        <ScrollPane fitToWidth="true" vbarPolicy="ALWAYS">
            <content>
                <VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 30;">
                    <children>
                        <Label text="PHIẾU THANH TOÁN (HÓA ĐƠN)" textFill="#d32f2f">
