<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookingcinema.controller.XemHoaDonNhanVienController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <Label text="XEM HÓA ĐƠN" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Button onAction="#goBack" style="-fx-background-color: #e0e0e0; -fx-cursor: hand;" text="← Quay lại" />
        </HBox>
    </top>

    <center>
        <VBox spacing="15.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label text="Tìm Kiếm Hóa Đơn Theo ID Người Dùng" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <TextField fx:id="txtSearchIdUser" promptText="Nhập ID người dùng (ví dụ: U001)" prefWidth="300.0" />
                <Button onAction="#handleSearch" text="Tìm kiếm" style="-fx-padding: 8px 20px; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-cursor: hand;" />
            </HBox>

            <Label fx:id="lblMessage" textFill="RED" wrapText="true" />

            <Label text="Danh Sách Hóa Đơn" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

            <TableView fx:id="tableHoaDon" prefHeight="400.0" prefWidth="960.0">
                <columns>
                    <TableColumn fx:id="colIdHoaDon" prefWidth="80.0" text="ID Hóa Đơn" />
                    <TableColumn fx:id="colNgayThanhToan" prefWidth="150.0" text="Ngày Thanh Toán" />
                    <TableColumn fx:id="colTrangThai" prefWidth="120.0" text="Trạng Thái" />
                    <TableColumn fx:id="colPhuongThuc" prefWidth="150.0" text="Phương Thức TT" />
                    <TableColumn fx:id="colTongTien" prefWidth="100.0" text="Tổng Tiền (VNĐ)" />
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
