<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookingcinema.controller.BookingSeatController">

    <top>
        <VBox spacing="10.0" style="-fx-background-color: #333; -fx-padding: 15;">
            <Button onAction="#goBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-cursor: hand;" text="&lt; Quay lại" />
            <Label fx:id="lblThongTinSuat" text="Phim A - 09:00 - Phòng 1" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
        </VBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #222;">
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>

            <VBox alignment="CENTER" spacing="5.0">
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#aaaaaa" height="10.0" stroke="BLACK" strokeType="INSIDE" width="400.0" />
                <Label text="MÀN HÌNH" textFill="#aaaaaa" />
            </VBox>

            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background: #222; -fx-background-color: #222;">
                <content>
                    <GridPane fx:id="gridGhe" alignment="CENTER" hgap="10.0" vgap="10.0" style="-fx-background-color: #222;">
                    </GridPane>
                </content>
            </ScrollPane>

            <HBox alignment="CENTER" spacing="20.0">
                <HBox alignment="CENTER" spacing="5.0">
                    <Rectangle fill="WHITE" height="20.0" width="20.0" arcHeight="5" arcWidth="5"/>
                    <Label text="Ghế trống" textFill="WHITE" />
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <Rectangle fill="#4CAF50" height="20.0" width="20.0" arcHeight="5" arcWidth="5"/>
                    <Label text="Đang chọn" textFill="WHITE" />
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <Rectangle fill="#D32F2F" height="20.0" width="20.0" arcHeight="5" arcWidth="5"/>
                    <Label text="Đã bán" textFill="WHITE" />
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <Rectangle fill="GRAY" height="20.0" width="20.0" arcHeight="5" arcWidth="5"/>
                    <Label text="Bảo trì" textFill="WHITE" />
                </HBox>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="20.0" style="-fx-background-color: #fff; -fx-padding: 15;">
            <Label fx:id="lblGheChon" text="Ghế chọn: ..." style="-fx-font-weight: bold;" />
            <Label fx:id="lblTongTien" text="Tổng tiền: 0 VNĐ" textFill="#d32f2f">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
            <Button fx:id="btnThanhToan" text="Thanh Toán" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-cursor: hand;" disable="true" onAction="#handleConfirm"/>
        </HBox>
    </bottom>

</BorderPane>